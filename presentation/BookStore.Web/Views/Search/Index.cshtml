@model IEnumerable<Book>

@{
    ViewData["Title"] = "Результати пошуку";
}

<h1>Результати пошуку</h1>

@if(Model.Count() == 0)
{
    <p>Збігів не знайдено</p>
}
else
{
    <ul>
        @foreach(var book in Model)
        {
            <li><a href="@Url.Action("Index", "Book", new { id = book.Id})">@book.Title</a></li>
        }
    </ul>
}
 