@model DeliveryModel
@{
    ViewData["Title"] = "Спосіб доставки";
}

<h1>Спосіб доставки</h1>

<form action="@Url.Action("StartDelivery")" method="post"> 
    <input type="hidden" name="id" value="@Model.OrderId"/>
    <div class="form-group">
        <label for="uniqueCode">Спосіб доставки</label>
        <select class="form-control" name="uniqueCode">
            @foreach(var Method in Model.Methods)
            {
                <option value="@Method.Key">@Method.Value</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Далі</button>
</form>

